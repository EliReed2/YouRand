{
  "manifest_version": 3,
  "name": "Youtube Video Generator",
  "description": "A Chrome extension popup built with Vite + React that generates a Youtube Video based off of previously liked videos",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://127.0.0.1:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "AddVideoIcon.svg",
        "SmallAddVideoIcon.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
