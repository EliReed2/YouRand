{
  "manifest_version": 3,
  "name": "YouRand - Youtube Random Video Generator",
  "short_name": "YouRand",
  "description": "YouRand is a Chrome extension that helps you discover random YouTube videos and save ones you like to tailor your feed.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouRand"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://yourand-production.up.railway.app/api"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "youRandIcon.svg",
        "Add-Video.svg",
        "Remove-Video.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
